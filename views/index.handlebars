<div class="container">
<div class="row">
  <div class="col s4"></div>
  <div class="col s4">
    <div class="row">
    <h1 class="center-align">Burgers!</h1>
    </div>
    <div class="row"><div class="center-align"><img src="/assets/burger.png"></div></div>
    </div>
  <div class="col s4"></div>  
</div>
<div class="row">

<div class="col s6">
<h3>On the Menu</h3>

<ul class="flow-text">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

  <div class="col s6">
<h3>Devoured</h3>

<ul class="flow-text">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

</div>

<div class="row">
<h4>Add a Burger</h4>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
  <input type="radio" name="devoured" value="0"> On the menu 
  </div>
 

  <button type="submit">Add Burger</button>
</form>
</div>