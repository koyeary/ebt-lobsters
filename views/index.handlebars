<div class="container">
  <div class="row">
    <div class="col s2"></div>
    <div class="col s8">
      <div class="row">
        <h1 class="center-align">Burger Time!</h1>
      </div>
      <div class="row">
        <div class="center-align"><img class="responsive-img" src="/assets/burger.png"></div>
      </div>
    </div>
    <div class="col s2"></div>
  </div>
  <div class="row center-align">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
      </div>

      <button type="submit" class="submit waves-effect waves-light btn">Add Burger</button>
    </form>
  </div>
  <div class="row">

    <div class="col s6 center-align">
      <h3>On the Menu</h3>

      <ul class="flow-text">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col s6 center-align">
      <h3>Devoured</h3>

      <ul class="flow-text">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>